{
  "manifest_version": 3,
  "name": "SummRai Chrome Extension",
  "version": "0.1.0",
  "description": "Chrome browser extension for SummRai",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["storage", "activeTab"]
}
